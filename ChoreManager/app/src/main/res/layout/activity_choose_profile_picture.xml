<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="SetTeamIcon"
    tools:context="com.example.alan.peter.bilal.sam.choremanager.ChooseProfilePictureActivity">

    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="499dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="none"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColorLink="@color/colorAccent"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp"
            tools:text="@string/string_select_a_new_avatar" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:columnCount="3"
            android:rowCount="2">

            <ImageView
                android:id="@+id/ic_avatar_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:contentDescription="@string/desc_avatar_image"
                app:srcCompat="@drawable/ic_avatar_00" />

        </GridLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
